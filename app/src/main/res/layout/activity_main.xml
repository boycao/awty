<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="416dp"
            android:layout_height="357dp" tools:layout_editor_absoluteY="51dp" tools:layout_editor_absoluteX="0dp">
        <TextView
                android:text="Enter the text message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewContent" tools:layout_editor_absoluteY="141dp"
                tools:layout_editor_absoluteX="132dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Text Content..."
                android:ems="10"
                android:id="@+id/editTextContent"/>
        <TextView
                android:text="Enter the recipient number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewNumber" tools:layout_editor_absoluteY="178dp"
                tools:layout_editor_absoluteX="132dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:text="Phone Number..."
                android:ems="10"
                android:id="@+id/editTextPhoneNumber"/>
        <TextView
                android:text="Enter the send time interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewTime" tools:layout_editor_absoluteY="319dp"
                tools:layout_editor_absoluteX="132dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Time Interval..."
                android:ems="10"
                android:id="@+id/editTextTimeInterval"/>
    </LinearLayout>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="460dp"
            tools:layout_editor_absoluteX="147dp"/>

</android.support.constraint.ConstraintLayout>